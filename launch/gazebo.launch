from launch import LaunchDescription
from launch.actions import IncludeLaunchDescription, ExecuteProcess
from launch.launch_description_sources import PythonLaunchDescriptionSource
from launch_ros.actions import Node
from ament_index_python.packages import get_package_share_directory
import os


def generate_launch_description():
    pkg_gazebo_ros = get_package_share_directory('gazebo_ros')
    pkg_robot = get_package_share_directory('robotic_arm_latest')

    urdf_file = os.path.join(pkg_robot, 'urdf', 'robotic_arm_latest.urdf')

    # Launch Gazebo (empty world)
    gazebo = IncludeLaunchDescription(
        PythonLaunchDescriptionSource(
            os.path.join(pkg_gazebo_ros, 'launch', 'gazebo.launch.py')
        )
    )

    # Publish a static transform between base_link and base_footprint
    static_tf = Node(
        package='tf2_ros',
        executable='static_transform_publisher',
        name='tf_footprint_base',
        arguments=['0', '0', '0', '0', '0', '0', 'base_link', 'base_footprint']
    )

    # Spawn the robot in Gazebo
    spawn_entity = Node(
        package='gazebo_ros',
        executable='spawn_entity.py',
        arguments=['-entity', 'robotic_arm_latest',
                   '-file', urdf_file,
                   '-x', '0', '-y', '0', '-z', '0'],
        output='screen'
    )

    # Simulate joint calibration (publishing /calibrated = true)
    fake_joint_calibration = ExecuteProcess(
        cmd=['ros2', 'topic', 'pub', '/calibrated', 'std_msgs/Bool', 'true', '--once'],
        output='screen'
    )

    return LaunchDescription([
        gazebo,
        static_tf,
        spawn_entity,
        fake_joint_calibration
    ])

